<!DOCTYPE html>
<html>
  <head>
    <title>chat</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box;}
        body { font: 13px Helvetica, Arial; }
        form { background: white; padding: 3px; position: fixed; bottom: 0; width: 100%; border-color: #000; border-top-style: solid; border-top-width: 1px;}
        form input { border-style: solid; border-width: 1px; padding: 10px; width: 85%; margin-right: .5%; }
        form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; margin-left: 2%; }
        #messages { list-style-type: none; margin: 0; padding: 0; font-weight: bold;}
        #messages li { padding: 5px 10px;}
        .red{ background: red;}
        .pink{background: pink}
        .maroon{background: maroon}
        .orangered{background: orangered}
        .orange{background: orange}
        .peru{background: peru}
        .yellow{background:yellow}
        .green{background: green}
        .blue{background: darkblue}
        .turquiose{background: turquiose}
        .purple{background: purple}
        .lightblue{background: lightblue}



    </style>
    <script src="../../socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
  </head>
  <body>
    <ul id="messages"></ul>
    <form action="/" method="POST" id="chatForm">
      <input id="txt" autocomplete="off" autofocus="on" placeholder="type your message here..." /><button>Send</button>
    </form>
    <script>
            //Choose a random color
            function getColor(){ 
              var colorList = ["red", "pink", "maroon", "orangered", "orange", "peru", "yellow", "yellowgreen",  "green", "blue", "turquiose", "purple", "lightblue"];
              var randomColor = Math.floor(Math.random()*colorList.length);
              return(colorList[randomColor])
            }
            var socket = io.connect("http://localhost:8080");

            // submit text message without reload/refresh the page
            $('form').submit(function(e){
                e.preventDefault(); // prevents page reloading
                socket.emit('chat_message', $('#txt').val());
                $('#txt').val('');
                return false;
            });

            // append the chat text message
            socket.on('chat_message', function(msg, msgcolor){
                console.log(msg);
                console.log(msgcolor);
                
                $('#messages').append($('<li class = "'+msgcolor+ '">').html(msg));
            });

            // append text if someone is online
            socket.on('is_online', function(username) {
                $('#messages').append($('<li style="background: black; color:magenta;">').html(username));
            });
            var username = prompt('Please tell me your preffered username');
            textColor = getColor()
            socket.emit('username', username, textColor);
            
    </script>
  </body>
</html>
 
